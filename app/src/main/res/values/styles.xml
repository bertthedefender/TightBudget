<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_totalBudget" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/application_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="category_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/application_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="category_position" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/application_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="category_listitem_small" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/application_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
